<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/alert_settings_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_alert_settings_card"
        android:padding="32dp"
        android:layout_centerInParent="true"
        android:elevation="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cài đặt cảnh báo thời tiết"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#222"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"/>

        <CheckBox
            android:id="@+id/cb_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhiệt độ cao (> 30°C)"
            android:textColor="#333"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <CheckBox
            android:id="@+id/cb_rain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Có mưa (mọi loại mưa)"
            android:textColor="#333"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <CheckBox
            android:id="@+id/cb_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gió mạnh (≥ 10 m/s)"
            android:textColor="#333"
            android:textSize="16sp"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btn_back_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quay lại trang chủ"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:backgroundTint="#4FC3F7"
            android:background="@drawable/bg_alert_settings_button"
            android:textSize="16sp"
            android:elevation="2dp"/>
    </LinearLayout>

</RelativeLayout> 